---
import MainLayout from '../layouts/home-layout.astro';
import HomeBlock from '../components/HomeBlock';

const blocks = [
	{
		title: 'Home',
		description: 'This literally takes you to the same page you\'re one right now',
		subTitle: '🫵🏽 are here',
		fullWidth: false,
		link: '/'
	},
	{
		title: 'About me',
		description: 'My very interesting life story',
		subTitle: '✨Personality✨',
		fullWidth: false,
		link: '/about'
	},
	{
		title: 'Projects',
		description: 'My creations 😈',
		subTitle: 'Experience 🧑🏽‍💻',
		fullWidth: true,
		link: '/'
	},
	{
		title: 'Collections',
		description: 'Some of the things I collect that I think make me cool',
		subTitle: '✨Personality✨',
		fullWidth: true,
		link: '/'
	},
	{
		title: 'Media',
		description: 'The media I consume for entertainment, personal growth, and ✨Knowledge✨',
		subTitle: '✨Personality✨',
		fullWidth: false,
		link: '/'
	},
	{
		title: 'Resume',
		description: 'The piece of paper that defines my career',
		subTitle: 'Experience 🧑🏽‍💻',
		fullWidth: false,
		link: '/'
	}
]


---
<MainLayout>
	<div class="grid grid-col-1 sm:grid-cols-1 md:grid-cols-2 gap-3 h-full w-full">
		<div class="box-border w-full flex flex-col md:flex-row mx-auto p-8 items-center md:col-span-2">
			<div class="box-border w-full md:w-1/2 h-full grid grid-cols-1 grid-rows-1 md:grid-cols-2 md:grid-rows-3 p-6 gap-3">
				{blocks.splice(0, 3).map((block) => <HomeBlock title={block.title} description={block.description} subTitle={block.subTitle} fullWidth={block.fullWidth} link={block.link} />)}
			</div>
			<div class="box-border w-full md:w-1/2 h-full grid grid-cols-1 grid-rows-1 md:grid-cols-2 md:grid-rows-3 p-6 gap-3">
				{blocks.map((block) => <HomeBlock title={block.title} description={block.description} subTitle={block.subTitle} fullWidth={block.fullWidth} link={block.link} />)}
			</div>
		</div>
	</div>
</MainLayout>