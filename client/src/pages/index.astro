---
import MainLayout from '../layouts/main-layout.astro';
import HomeBlock from '../components/HomeBlock';

const blocks = [
	{
		title: 'Home',
		description: 'This literally takes you to the same page you\'re one right now',
		subTitle: '🫵🏽 are here',
		fullWidth: false
	},
	{
		title: 'About me',
		description: 'My very interesting life story',
		subTitle: '✨Personality✨',
		fullWidth: false
	},
	{
		title: 'Projects',
		description: 'My creations 😈',
		subTitle: 'Experience 🧑🏽‍💻',
		fullWidth: true
	},
	{
		title: 'Collections',
		description: 'Some of the things I collect that I think make me cool',
		subTitle: '✨Personality✨',
		fullWidth: true
	},
	{
		title: 'Media',
		description: 'The media I consume for entertainment, personal growth, and ✨Knowledge✨',
		subTitle: '✨Personality✨',
		fullWidth: false
	},
	{
		title: 'Resume',
		description: 'The piece of paper that defines my career',
		subTitle: 'Experience 🧑🏽‍💻',
		fullWidth: false
	}
]


---
<MainLayout>
	<div class="grid grid-col-2 sm:grid-cols-1 md:grid-cols-1 gap-3 h-full">
		<div class="box-border flex sm:flex-col md:flex-col lg:flex-row mx-auto p-8 items-center">
			<div class="box-border w-1/2 h-full grid grid-cols-2 grid-rows-3 p-6 gap-3">
				{blocks.splice(0, 3).map((block) => <HomeBlock title={block.title} description={block.description} subTitle={block.subTitle} fullWidth={block.fullWidth} />)}
			</div>
			<div class="box-border w-1/2 h-full grid grid-cols-2 grid-rows-3 p-6 gap-3">
				{blocks.map((block) => <HomeBlock title={block.title} description={block.description} subTitle={block.subTitle} fullWidth={block.fullWidth} />)}
			</div>
		</div>
	</div>
</MainLayout>